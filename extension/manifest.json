{
	"manifest_version": 2,
	"name": "Heroes Draft Helper",
	"short_name": "HotS Drafter",
	"version": "0.0.0.1", // Major Version; Minor / Feature Version; Bug Fix Version; Build #
	
	"description": "Heroes of the Storm Draft Helper that utilizes data from HotSLogs.com and takes into account player skill with each Hero.",
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},

	"page_action": {
		"default_icon": {
			"16": "images/icon16.png",
			"48": "images/icon48.png",
			"128": "images/icon128.png"
		},
		"default_title": "Heroes Draft Helper"
	},

	"author": "Jacques Marcotte",

	// https://developer.chrome.com/extensions/manifest/event_rules
	// Will possibly use for declarativeContent
	"event_rules": [
	],

	"homepage_url": "https://github.com/jpmarcotte/HeroesDraftHelper",
	"incognito": "split",

	// https://developer.chrome.com/extensions/declare_permissions
	"permissions": [
		"http://www.hotslogs.com/*",
		"declarativeContent",
		"storage"
	],

	// I don't think we'll need these, but maybe?
	"web_accessible_resources": [
	]

}
